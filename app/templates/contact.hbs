<h1>Contact Page</h1>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Your email address:</label>
            {{input class="form-control" type="email" placeholder="Your email address" value=emailAddress
                    autofocus="autofocus"}}
        </div>
        <div class="form-group">
            {{textarea class="form-control" placeholder="Your message, at least 5 characters" rows="7" value=message}}
        </div>
        <button class="btn btn-success" disabled="{{unless isDisabled 'disabled'}}" {{action 'saveData'}}>Send
            Message
        </button>
    </div>
    {{#if responseMessage}}
        <div class="col-md-6">
            <br/>
            <div class="alert alert-success">
                <p>{{responseMessage}}</p>
            </div>
        </div>
    {{/if}}
</div>
